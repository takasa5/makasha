<!DOCTYPE html>
<html>
  <head>
    <title>makasha</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= include_gon(watch: true) %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.3/Chart.min.js"></script>
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
    <!--<script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>-->
  </head>

  <body>
  <%= javascript_include_tag 'init.js' %>
    <nav>
      <div class="nav-wrapper main-color">
        <a href="/" class="brand-logo center base-high-color-text">makasha</a>
        <ul class="left">
        <a class='sidenav-trigger' data-target='sidenav'>
            <i class="material-icons base-high-color-text">menu</i>
        </a>
        </ul>
        <ul class="right hide-on-med-and-down">
        <% if logged_in? %>
           <li><a href="/" class="white-text text-darken-3">
            <i class="material-icons left">home</i>ホーム</a></li>
          <li><a href="/setting" class="white-text text-darken-3">
            <i class="material-icons left">brightness_high</i>設定
          </a></li>
          <li><a href="/signout" class="white-text text-darken-3">
            <i class="material-icons left">exit_to_app</i>ログアウト
          </a></li>
        <% end %>
        </ul>
      </div>
    </nav>
    <ul id='sidenav' class='sidenav left'>
    <% if logged_in? %>
      <div class="row med-color" style="padding:20px 0">
        <div class="col s4 offset-s4">
          <%= image_tag(current_user.image_url.sub(/_normal/, ''), {:class => "circle responsive-img"}) %>
        </div>
        <div class="col s12 center white-text">
          <%= current_user.name %>
        </div>
      </div>
      <li><a href="/" class="grey-text text-darken-3">
        <i class="material-icons">home</i>マイページ
      </a></li>
    <% else %>
      <li><a href="/auth/twitter" class="grey-text text-darken-3">
        <i class="fab fa-twitter fa-fw fa-lg"></i>Twitterでログイン
      </a></li>
    <% end %>
      <li><a href="/records" class="grey-text text-darken-3">
        <i class="material-icons">people</i>みんなのレコード
      </a></li>
    <% if logged_in? %>
      <li><a href="/setting" class="grey-text text-darken-3">
        <i class="fas fa-cog fa-fw fa-lg"></i>設定
      </a></li>
      <li><a href="/signout" class="grey-text text-darken-3">
        <i class="material-icons">exit_to_app</i>ログアウト
      </a></li>
    <% end %>
    </ul>
        
    <%= yield %>
  </body>
</html>
